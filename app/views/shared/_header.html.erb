<div class="row">
    <div class="col-md-12">
      <div class="page-header">
        <h1>
        <%= link_to 'Movie Store', movies_path %>
        </h1>
      </div>
    <nav class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
             <span class="sr-only">Toggle navigation</span>
             <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
          </button> <%= link_to 'Home', movies_path, :class=>"navbar-brand"%>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

          <%= form_tag(browse_movies_path, :method => "get", id: "search-form", :class => "navbar-form navbar-left  form-group") do %>
              <span class="glyphicon glyphicon-search searcharea"></span>
              <%= text_field_tag :search, params[:search], placeholder: "Search Movies",:class => "form-control searchfield form-group"  %>
              <%= submit_tag "Search",class:"btn btn-default searchbutton" %>
          <% end %>



        <% if !user_signed_in?%>
        <ul class="nav navbar-nav navbar-right">
          <li class="active">
            <a href="<%= new_user_registration_path%>">Sign Up</a>
          </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">More:  <strong class="caret"></strong></a>
                  <ul class="dropdown-menu">
                    <li>
                      <a href="<%=new_user_session_path%>">Sign In</a>
                    </li>
                    <li class="divider">
                    </li>
                    <li>
                      <a href="#">Separated link</a>
                    </li>
                  </ul>
            </li>
          </ul>
          <%end %>
          <% if user_signed_in?%>
          <ul class="nav navbar-nav navbar-right">
             <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">More Options:  <strong class="caret"></strong></a>
                    <ul class="dropdown-menu">
                      <li>
                        <a href="#">Profile</a>
                      </li>
                      <li>
                        <a href="<%= edit_user_registration_path %>">Account Settings</a>
                      </li>

                      <li class="divider">
                      </li>
                      <li>
                        <li><%= link_to 'Sign Out', destroy_user_session_path, class: "", :method => :delete  %></li>
                      </li>
                    </ul>
              </li>
            </ul>
        <% end %>
      </div>
    </nav>
  </div>
</div>
