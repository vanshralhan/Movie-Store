<%= render 'devise/shared/script' %>

    <div id="copy"><a href="<%=movies_path %>"><h3 class ="heading"><b>MovieStore</b></h3></a></div>
    <div class="signupmask">
      <div class="signupmodal  display">
        <div class="login">
          <h1 class="signupheading">Signup</h1>
            <div class="form">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <form method="post">
                  <%= devise_error_messages! %>

                <div class="col-md-12">
                <div class="col-md-8 pull-left">
                  <div class=" form-group">
                     <%= f.label :name %>
                     <%= f.text_field :name, class: "form-control", :autofocus => true, placeholder: "Enter Name", required: true %>
                  </div>

                  <div class="form-group">
                     <%= f.label :photo %>
                     <%= f.file_field :photo, class: "form-control photofield", required: true %>
                  </div>

                  <div class="form-group">
                     <%= f.label :email %>
                     <%= f.email_field :email, autofocus: true, class: "form-control",placeholder:"Enter Your Email", required: true %>
                  </div>
                  </div>
                  <div class="col-md-4 pull-left">
                     <%= image_tag 'usr.png', class: "newuserimage" %>
                  </div>
                </div>

              <div class="clearfix"></div>

              <div class="row">
                  <div class="form-group">
                     <%= f.label :DateOfBirth, class: "dob" %>
                     <%= f.date_field :dob, class: "form-control", required: true %>
                  </div>

                  <div class="form-group">
                     <%= f.label :password, class: "password" %>
                     <%= f.password_field :password, class: "form-control", required: true, placeholder: "( 6 characters minimum)" %>
                  </div>

                  <div class="form-group">
                     <%= f.label :confirm_password, class: "confirm" %>
                     <%= f.password_field :password_confirmation, class: "form-control check",placeholder:"Re-type Password", required: true %>
                  </div>
              </div>

              <div class="form-group signupform">
                 <%= f.submit "Sign up", class: "btn btn-primary signupbtn", data: { disable_with: 'Check Your Mail Now!!'} %>
              </div>
              <% end %>
              </form>
            </div>
          <br>
            <% #render "devise/shared/links" %>
        </div>
      </div>
     </div>



<%= render 'devise/shared/signlogback' %>
