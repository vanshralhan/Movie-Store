<%= render 'devise/shared/script' %>

<div id="copy"><a href="<%=movies_path %>"><h3 class ="heading"><b>MovieStore</b></h3></a></div>
<div class="mask">

  <div class="modal display">

    <div class="login">
      <h1 class="loginheading">Login</h1>
        <div class="tooltip">
          <a href="<%= user_google_oauth2_omniauth_authorize_path %>" >
          <i class="fa fa-google-plus-square googlebutton"></i>
          <span class="tooltiptext googletext">Log In With Google</span>
        </div>
      </a>
        <div class="tooltip">
          <a href="<%= user_facebook_omniauth_authorize_path %>" >
          <i class="fa fa-facebook-square facebookbutton"></i>
          <span class="tooltiptext">Log In With Facebook</span>
        </div>

      </a>
      <p>Or</p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <form method="post">
        <%= f.email_field :email, placeholder: "Email",autofocus: true, class: "form-control emailfield", required: true %>
        <%= f.password_field :password,placeholder: "Password", class: "form-control passfield", required: true %>
        <%= f.submit "Sign In", class: "signinbutton" %>
        </div>
        <ul class="linksul">
          <li><%= link_to "Sign Up", new_user_registration_path, class: "links" %></li>
          <li><%= link_to "Forgot your password?", new_password_path(resource_name), class: "links" %></li>
          <li><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name),class: "links" %></li>
          <li><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name),class: "links" %></li>
        </ul>

      </form>
      </div>
      <% end %>
    </div>
  </div>

  <%= render 'devise/shared/signlogback' %>
