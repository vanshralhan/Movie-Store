<h2>Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <ul class="erroedevise">
    <li><%= devise_error_messages! %></li>
  </ul>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true,placeholder: "Enter Your Email", class: "devisefield" %>
  </div>

  <div class="actions">
    <%= f.submit "Resend unlock instructions" ,class: "devisebtn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
