<div class="row">

<% sorted.each_with_index  do |f,index| %>
   <% if (index % 4) == 0 %>
   <div class="clearfix"></div>
   <div class="col-sm-3 col-md-3">
      <%= link_to image_tag(f.image_url,alt: "f.title", class: "image"), movie_path(f) %>
      <h4><%= f.title%></h4>
    </div>
   <%else%>
   <div class="col-sm-3 col-md-3">
      <%= link_to image_tag(f.image_url,alt: "f.title", class: "image"), movie_path(f) %>
      <h4><%= f.title%></h4>
    </div>
    <% end %>
<% end %>
</div>
