
			<div class="row">
						<div class="col-md-4">
								<img alt="<% @movie.title %>" src="<%= @movie.image_url %>" class="img-thumbnail stng" />
					  </div>

								<div class="col-md-8">
										<div class="col-md-4">
												<div>
													<h3>
														<%= @movie.title + "" + "(#{@movie.year})"%>
							  				  </h3>
						    			  </div>
												<div>
													<b><i>Genre:</i></b>
													<i><%= @movie.genre %></i>
						   					</div>
										</div>
										<div class="col-md-4">
												<%= image_tag 'rating.png', class: "rating-show-image" %>
												<p class = "rating-show"><%= @movie.rating %>/10</p>
										</div>
										<div class="clearfix"></div>
										<div>
												<h2>Plot:</h2>
												<p><%= @movie.plot%></p>
										</div>
										<div>
												<h2>Cast:</h2>
												<p><%= @movie.cast%></p>
										</div>
										<div class="webbutton btn-group btn pull-right">
    								<a class = "btn btn-primary btn-lg" href = "<%= @movie.web %>" >Website</a>
  									</div>
				     		</div>
			</div>
			<div class="clearfix"></div>

			<div class="row">
			<div class="col-md-12">
						<div class = "col-md-6">
							<div>
								<h3>Comments</h3>
									<div class = "commentsection">
											<% @movie.comments.limit(3).each do |comment| %>
												<div class="col-md-3">
												 <%= image_tag 'usr.png', class: "commentimage" %>
											   <%= User.find(comment.user_id).name %>
										   </div>
											 <div>
												 <%= comment.body %>
											 </div>
											<div class="clearfix"></div>
										<% end %>
										<a id="modal-960972" href="#modal-container-960972" role="button" class="btn btn-default pull-right	" data-toggle="modal"> More Reviews</a>
										<div class="modal fade" id="modal-container-960972" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
											<div class="modal-dialog">
												<div class="modal-content">
													<div class="modal-header">
														<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
															Ã—
														</button>
														<h4 class="modal-title" id="myModalLabel">
															 All Reviews
														</h4>
													</div>
													<div class="modal-body">
														<% @movie.comments.each do |comment| %>
														<p>
															 <%= image_tag 'usr.png', class: "commentimage" %>
															 <%= comment.user_id %>
															 <%= comment.body %>
														</p>
														<% end%>
													</div>
													<div class="modal-footer">
														<button type="button" class="btn btn-default" data-dismiss="modal">
															Close
														</button>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="clearfix"></div>
									<h4>Reviews(<%= @movie.comments.count %>)</h4>
										<%= form_for([@movie, @movie.comments.build], class: "form-inline") do |f| %>
										<div class= "form-group">
										<%= image_tag 'usr.png', class: "rating-show-image img-thumbnail commentimage1", align: "middle" %>
											 		<%= f.text_area :body , :class => "commentarea"%>
										 		<p>
	 												<%= f.submit :class => "commentsubmit btn-primary" %>
 												</p>
											</div>
										<% end %>
								</div>
						<div class = "col-md-6">
							<h3 class= "text-left">
								Top <%= @genre.count%> Movies in <%= @movie.genre %>
							</h3>
							<div class = "scroll" >
							<ol class="c">
								<% @genre.each do |l| %>
								<li><%= link_to l.title, movie_path(l) %></li><hr>
								<%end %>
							</ol>
						</div>
						</div>
		  </div>
</div>
